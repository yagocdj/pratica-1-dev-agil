<h1>Stores</h1>

<div>
    <table>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Gerente</th>
                <th scope="col">Detalhes</th>
            </tr>
        </thead>
        <tbody>
            <% @stores.each do |store| %>
                <tr>
                    <th scope="row"><%=store.id%></th>
                    <td><%=store.name%></td>
                    <td><%=store.manager.name%></td>
                    <td>
                        <%= link_to "Detalhar", store %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>